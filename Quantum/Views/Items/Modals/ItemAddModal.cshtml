@model Quantum.Models.Item;

<div class="modal fade" id="ItemModal">
	<div class="modal-dialog modal-md">
		<!--modal-lg-->
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Item Entry</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<form asp-controller="Items" asp-action="CreateItem" method="post">
					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Name</label>
						<div class="col-sm-6">
							<input type="text" class="form-control" asp-for="Name" />
						</div>
					</div>

					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Quantity</label>
						<div class="col-sm-6">
							<input type="number" class="form-control" asp-for="Quantity" value=1 />
						</div>
					</div>

					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Price</label>
						<div class="col-sm-6">
							<input type="number" class="form-control" asp-for="Price" value=1.00 />
						</div>
					</div>

					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Store</label>
						<div class="col-sm-6">
							<input type="text" class="form-control" asp-for="Store" />
						</div>
					</div>

					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Category</label>
						<div class="col-sm-6">
							<select class ="form-select" asp-for="Category">
								<option>Food</option>
								<option>Kitchen</option>
								<option>Bathroom</option>
								<option>Misc</option>
								<option>Living Room</option>
							</select>
						</div>
					</div>

					<div class="form-group row mb-3">
						<div class="col-sm-12">
							<textarea asp-for="Notes" class="form-control" rows="5" placeholder="Notes"></textarea>
						</div>
					</div>

					<br/>
					<br/>
					<button type="submit" class="btn btn-outline-theme">Add Item</button>
				</form>
			</div>
		</div>
	</div>
</div>