@section Scripts {

}

<div class="modal fade" id="JournalEntryModal">
	<div class="modal-dialog modal-md">
		<!--modal-lg-->
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Journal Entry: @DateTime.Now.ToString("MM/dd/yyyy")</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<form asp-controller="" asp-action="" method="post">

					<div class="form-group row mb-3">
						<h1 class="col-form-label-lg phoenix-section-header">Daily Stats</h1>
					</div>

					<!--Calorie Intake-->
					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Calories</label>
						<div class="col-sm-6">
							<input type="number" class="form-control" placeholder="(Calories)" />
						</div>
					</div>
					
					<!--Protein Intake-->
					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Protein Intake</label>
						<div class="col-sm-6">
							<input type="number" class="form-control" placeholder="(In Grams)" />
						</div>
					</div>

					<!--Water Intake-->
					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Water Intake</label>
						<div class="col-sm-6">
							<input type="number" class="form-control" placeholder="(Fluid Ounces)" />
						</div>
					</div>

					<!--Weight-->
					<div class="form-group row mb-3">
						<label class="form-label col-sm-4 col-form-label">Weight</label>
						<div class="col-sm-6">
							<input type="number" class="form-control" placeholder="(lbs)" />
						</div>
					</div>


					<div class="form-group row mb-3">
						<h1 class="col-form-label-lg phoenix-section-header">Food</h1>
					</div>


					<div class="form-group row mb-3">
						<div class="col-sm-12">
							<textarea class="form-control" rows="5"></textarea>
						</div>
					</div>


					<!--Checks for if I completed something that day-->
					<div class="form-group row mb-3">
						<h1 class="col-form-label-lg phoenix-section-header">Checks</h1>
					</div>

					<!--Gym-->
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" />
						<label class="form-check-label">Gym/Exercise</label>
					</div>

					<!--No Erotica-->
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" />
						<label class="form-check-label">Cooked Food</label>
					</div>

					<!--No Mochas-->
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" value=""/>
						<label class="form-check-label">No Mochas</label>
					</div>


					<!--No Erotica-->
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox"/>
						<label class="form-check-label">No Erotica</label>
					</div>

					<!--No Reddit-->
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" />
						<label class="form-check-label">No Reddit</label>
					</div>



					<br /> 
					<br />
					<button type="submit" class="btn btn-outline-theme">Create</button>
				</form>
			</div>
		</div>
	</div>
</div>
